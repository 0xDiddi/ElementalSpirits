{
  "multipart": [
    {
      "when": {
        "OR": [
          { "north": "false", "south": "false", "east": "false", "west": "false", "up": "false", "down": "false" },
          { "north": "true", "south": "false" },
          { "north": "false", "south": "true" },
          { "east": "true", "west": "false" },
          { "east": "false", "west": "true" },
          { "up": "true", "down": "false" },
          { "up": "false", "down": "true" }
        ]
      },
      "apply": {
        "model": "elementalspirits:earth_altar_ring_base"
      }
    },
    {
      "when": {
        "north": "true"
      },
      "apply": {
        "model": "elementalspirits:earth_altar_ring_side",
        "uvlock": true
      }
    },
    {
      "when": {
        "east": "true"
      },
      "apply": {
        "model": "elementalspirits:earth_altar_ring_side",
        "y": 90,
        "uvlock": true
      }
    },
    {
      "when": {
        "south": "true"
      },
      "apply": {
        "model": "elementalspirits:earth_altar_ring_side",
        "y": 180,
        "uvlock": true
      }
    },
    {
      "when": {
        "west": "true"
      },
      "apply": {
        "model": "elementalspirits:earth_altar_ring_side",
        "y": 270,
        "uvlock": true
      }
    },
    {
      "when": {
        "up": "true"
      },
      "apply": {
        "model": "elementalspirits:earth_altar_ring_side",
        "x": -90,
        "uvlock": true
      }
    },
    {
      "when": {
        "down": "true"
      },
      "apply": {
        "model": "elementalspirits:earth_altar_ring_side",
        "x": 90,
        "uvlock": true
      }
    }
  ]
}
